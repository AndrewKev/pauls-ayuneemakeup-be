---
import '@/styles/global.css';

import { Toaster } from "@/components/ui/sonner";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="stylesheet" href="/fe-admin/src/styles/"> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="">
    <div class="flex h-screen items-center justify-center bg-gray-50 px-4 py-12 sm:px-6 lg:px-8">
      <slot />
    </div>
    <Toaster client:only />
  </body>
</html>
